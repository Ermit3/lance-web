<div class="col-md-3">
	<div class="card" data-mdb-toggle="modal" data-mdb-target="#Modal{{key}}">
		<div class="card-body">
			<h5 class="card-title">{{ title }}</h5>
			<i class="fas fa-{{ icon }} fa-3x"></i>
		</div>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="Modal{{key}}" tabindex="-1" aria-labelledby="ModalLabel{{key}}" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-body">
				<h5 class="modal-title text-center" id="ModalLabel{{key}}">{{ title }}</h5>
				<br>
				<div class="container">
					<div class="row">
						{% for item in items %}
							<div class="col-md-6">
								<button type="button" class="btn btn-outline-primary col-md-12" data-mdb-ripple-color="dark">{{ item }}</button>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
					Close
				</button>
			</div>
		</div>
	</div>
</div>
