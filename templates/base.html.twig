<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<!-- Font Awesome -->
			<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"/>
			<!-- Google Fonts -->
			<link
			href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
			<!-- MDB -->
			<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet"/>
			{% block carousel %}
				<style>{% include "css/carouselHome.css" %}</style>
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header>
			{% block header %}
				{% include "_shared/_navbar.html.twig" with {'type':'light'} %}
			{% endblock %}
		</header>

		{% block body %}{% endblock %}

		{% block footer %}
			{% include "_shared/_footer.html.twig" %}
		{% endblock %}
	</body>

	{% block javascripts %}
		<!-- MDB -->
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
	{% endblock %}
</html>
